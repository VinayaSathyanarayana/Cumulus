<apex:page standardController="Batch_Template__c" extensions="BGE_BatchTemplateOverrideController" showHeader="true" docType="html-5.0" standardStylesheets="true">

    <apex:slds />
    <apex:stylesheet value="{!URLFOR($Resource.CumulusStaticResources, '/npsp-slds/npsp-common.css')}" />

    <div class="slds-scope">
        <apex:form id="idForm" html-novalidate="novalidate">

            <!-- PAGE HEADER -->
            <c:UTIL_PageHeader headerLabel="{!$ObjectType.Batch_Template__c.Label}"
                               header="{!diBatchTemplate.Name}"
                               icon="custom17_120" iconCategory="custom" iconContainer="custom18"
                               saveAction="{!save}" saveReRender="idForm"
                               cancelAction="{!cancel}"/>
            <!-- /PAGE HEADER -->

            <c:UTIL_PageMessages />
            <c:UTIL_NavigateBack recordId="{!diBatchTemplate.Id}" redirect="{!redirect}"/>

            <!-- BODY -->
            <div class="slds-grid slds-m-around_medium" >
                <div class="slds-size_3-of-5">
                    <c:BGE_SettingsUITemplate bdiBatchTemplate="{!diBatchTemplate}" editMode="true" showBatchOnlyFields="true" />
                </div>
            </div>
            <!-- /BODY -->

        </apex:form>
    </div>
</apex:page>